<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.admin.androidviewsandlayouts.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:theme="@style/BtnTheme">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Hello" />

    </LinearLayout>

    <EditText
        android:id="@+id/etInputValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please input a value"
        android:lines="2" />

    <Button
        android:id="@+id/btnUpdateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Text View (Using Listener)"/>

    <Button
        android:id="@+id/btnUpdateTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="updateTextView"
        android:text="Update Text View (Using OnClick)" />

    <TextView
        android:id="@+id/tvDisplayedValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First" />

        <TextView
            android:id="@+id/tvSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvFirst"
            android:gravity="right"
            android:text="Second" />

        <TextView
            android:id="@+id/tvThird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvFirst"
            android:layout_toRightOf="@+id/tvFirst"
            android:text="Third" />


    </RelativeLayout>

</LinearLayout>

